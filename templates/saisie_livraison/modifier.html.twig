{% extends 'baseLivreur.html.twig' %}

{% block title %}Modifier{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Modifier Livraison</h1>
        
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                <div class="form-group">
                    {{ form_label(form.createdAt) }}
                    {{ form_widget(form.createdAt, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.isConfirmed) }}
                    {{ form_widget(form.isConfirmed) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.commande) }}
                    {{ form_widget(form.commande, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.commande) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.idMembre) }}
                    {{ form_widget(form.idMembre, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.idMembre) }}
                </div>
                {{ form_end(form) }}
                <a href="{{ path('listeLivraisons') }}" class="btn btn-secondary">Annuler</a>
            </div>
        </div>
    </div>
{% endblock %}
