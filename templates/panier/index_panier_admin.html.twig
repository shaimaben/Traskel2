{% extends 'gestionProd/baseback1.html.twig' %}

{% block title %}Panier index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="my-4">Panier index</h1>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr class="text-center">
                                <th><strong>Id</strong></th>
                                <th>Nbr_Prods</th>
                                <th>Total_prix</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for panier in paniers %}
                            <tr class="text-center">
                                <td><strong>{{ panier.id }}</strong></td>
                                <td>{{ panier.nbrProds }}</td>
                                <td>{{ panier.totalPrix }}</td>
                                <td>
                                    <a href="{{ path('app_panier_show', {'id': panier.id}) }}" class="btn btn-sm btn-primary">show</a>
                                    <a href="{{ path('app_panier_edit', {'id': panier.id}) }}" class="btn btn-sm btn-primary">edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="text-right mt-3">
                    <a href="{{ path('app_panier_new') }}" class="btn btn-success">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}