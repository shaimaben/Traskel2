{% block js %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1"></script>
{% endblock %}

{% extends 'security/baseback1.html.twig' %}
{% block body %}


  <div style="text-align: center; margin-top: 100px; margin-left: 500px ">

    <div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"> Pourcentage  utilisateur par role </h5>

            <!-- Pie Chart -->
            <div id="myPieChart"></div>

            <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
            <script>
                document.addEventListener("DOMContentLoaded", () => {
                    new ApexCharts(document.querySelector("#myPieChart"), {
                        series: [{{ userCount }}, {{ livererCount }}, {{ adminCount }}],
                        chart: {
                            height: 350,
                            type: 'pie',
                        },
                        labels: ['Utilisateurs', 'Livreurs', 'Administrateurs'],
                        colors: ['#FF6384', '#36A2EB', '#FFCE56'], // Replace with your desired colors
                        legend: {
                            show: true,
                            position: 'bottom',
                        },
                    }).render();
                });
            </script>
            <!-- End Pie Chart -->

        </div>
    </div>
</div>

{% endblock %}
