{% extends 'security/baseback1.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block header %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header text-center bg-primary text-white">
                <h5 class="mb-0">Modifier compte utilisateur </h5>
            </div>
            <div class="card-body">
                <!-- User Edit Form -->
                <form class="mx-auto" style="max-width: 400px;" method="post" action="{{ path('app_user_edit', {'id': user.id}) }}" novalidate>
                    {{ form_start(form) }}
                    
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.nom_user, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.prenom_user, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.adresse_user, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.tel_user, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                        </div>
                    </div>
                     <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.roles, {'attr': {'class': 'form-control', 'placeholder': 'Role'}}) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.points_user, {'attr': {'class': 'form-control', 'placeholder': 'Points'}}) }}
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.is_verified, {'attr': {'class': 'form-control', 'placeholder': 'Points'}}) }}
                        </div>
                    </div>
              
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            {{ form_row(form.isBanned, {'attr': {'class': 'form-control', 'placeholder': 'isBanned'}}) }}
                        </div>
                    </div>
                    
    <div class="form-row">
    <div class="form-group col-md-5">
        {{ form_label(form.plainPassword, '',{'label_attr': {'class': 'white-label'}}) }}
        <div class="password-field">
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
   </div>
              

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Update User</button>
                    </div>

                    
                    {{ form_end(form) }}
                </form>
                <!-- End User Edit Form -->

                <div class="mt-3 text-center">
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                </div>

                <!-- Delete User Form -->
                {{ include('user/_delete_form.html.twig') }}
                <!-- End Delete User Form -->
            </div>
        </div>
    </div>

    <style>

.password-field {
    display: none; 
}

.white-label {
    color: white;
}


</style>
{% endblock %}

