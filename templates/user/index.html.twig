<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">User Information</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="right-table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Email</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Nom_user</th>
                        <th scope="col">Prenom_user</th>
                        <th scope="col">Adresse_user</th>
                        <th scope="col">Tel_user</th>
                        <th scope="col">Points_user</th>
                        <th scope="col">IsVerified</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            <td>{{ user.nomUser }}</td>
                            <td>{{ user.prenomUser }}</td>
                            <td>{{ user.adresseUser }}</td>
                            <td>{{ user.telUser }}</td>
                            <td>{{ user.pointsUser }}</td>
                            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                            <td>
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Show</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
                        </table>
                        
                    </div>
                </div>
                 <a href="{{ path('app_user_new') }}" class="btn btn-primary mt-3">Create new</a>
            </div>
        </div>
