
{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.nomUser }} {{ app.user.prenomUser }}{% endblock %}

{% block content %}
    <div class="grix xs4 container">
        {% for message in app.flashes('message') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-2 success">{{ message }}</div>
            </div>
        {% endfor %}
        <div class="col-xs4">
            <h1>Profil de {{ app.user.nomUser }} {{ app.user.prenomUser }}</h1>
        </div>
        <div class="col-xs1">Nom :</div>
        <div class="col-xs3">{{ app.user.nomUser }}</div>
        <div class="col-xs1">Prénom :</div>
        <div class="col-xs3">{{ app.user.prenomUser }}</div>
        <div class="col-xs1">Email :</div>
        <div class="col-xs3">{{ app.user.email }}</div>
        <div class="col-xs1">Adresse :</div>
        <div class="col-xs3">{{ app.user.adresseUser }}</div>
        <div class="col-xs1">Téléphone :</div>
        <div class="col-xs3">{{ app.user.telUser }}</div>
        <div class="col-xs4">
            <a href="{{ path('User.edit') }}" class="btn blue">Modifier le profil</a>
            <a href="{{ path('User.editpass')}}" class="btn blue">Modifier le mot de passe</a>
        </div>
    </div>
{% endblock %}
