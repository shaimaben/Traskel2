{% extends 'baseLivreur.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1 class="mb-4">Livraisons Produits</h1>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Adresse</th>
                    <th scope="col">Nb. Produits</th>
                    <th scope="col">Prix Total</th>
                    <th scope="col">Ajouté à</th>
                    <th scope="col">Confirmation</th>
                </tr>
            </thead>
            <tbody>
                {% for liv in livraisons %}
                    <tr>
                        <td>{{ liv.commande.adresseCmd }}</td>
                        <td>{{ liv.commande.panierNbProd }} produits</td>
                        <td>{{ liv.commande.prixCmd }}</td>
                        <td>{{ liv.createdAt|date('d-m-Y H:i:s') }}</td>
                        <td>
                            <form action="{{ path('confirmerLivraison',{'id': liv.id})}}" method="post">
                                <button type="submit" class="btn btn-success">Confirmer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    

{% endblock %}
