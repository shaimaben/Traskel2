<!DOCTYPE html>

<title>Produit index</title>

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomProd</th>
                <th>DescrpProd</th>
                <th>PhotoProd</th>
                <th>TypeProd</th>
                <th>PrixProd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nomProd }}</td>
                <td>{{ produit.descrpProd }}</td>
                <td>{{ produit.photoProd }}</td>
                <td>{{ produit.typeProd ? 'Yes' : 'No' }}</td>
                <td>{{ produit.prixProd }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
